# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql://raas_user:raas_password@postgres:5432/raas_platform

# Redis
REDIS_URL=redis://redis:6379

# OIDC/OAuth2 (Optional)
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_AUTHORITY=
OIDC_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback

# File Storage (MinIO)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=rai-platform
MINIO_SECURE=false

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@rai-platform.com
EMAILS_FROM_NAME=RAI Platform

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv,json,png,jpg,jpeg

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Assessment
ASSESSMENT_TIMEOUT_MINUTES=60
DIAGNOSTICS_TIMEOUT_MINUTES=30

# Audit
AUDIT_LOG_RETENTION_DAYS=2555
EVIDENCE_RETENTION_DAYS=2555