# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Redis
REDIS_URL=redis://localhost:6379

# OIDC/OAuth2 (Optional)
OIDC_CLIENT_ID=your_oidc_client_id
OIDC_CLIENT_SECRET=your_oidc_client_secret
OIDC_AUTHORITY=https://your-oidc-provider.com

# File Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET_NAME=your-bucket-name
MINIO_SECURE=false

# Elasticsearchsearch
ELASTICSEARCH_URL=http://localhost:9200

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@your-platform.com
EMAILS_FROM_NAME=Your Platform

# Security
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=["pdf", "doc", "docx", "txt", "csv", "json", "png", "jpg", "jpeg"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Assessment
ASSESSMENT_TIMEOUT_MINUTES=60
DIANOSTICS_TIMEOUT_MINUTES=30

# Audit
AUDIT_LOG_RETENTION_DAYS=255
EVIDENCE_RETENTION_DAYS=255

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ENVIRONMENT=development
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
